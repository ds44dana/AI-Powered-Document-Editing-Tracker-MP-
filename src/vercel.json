{
  "installCommand": "npm ci --no-audit",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/extract.js": {
      "runtime": "nodejs16.x",
      "memory": 1024,
      "maxDuration": 30
    },
    "api/generate-suggestions.js": {
      "runtime": "nodejs16.x",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}